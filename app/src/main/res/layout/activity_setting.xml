<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.Activity_Setting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="690dp"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/background"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CÀI ĐẶT"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingLeft="20dp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_btnprofile"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:text="Thông tin người dùng"
            android:textColor="#828282"
            android:textStyle="normal"
            android:textSize="17sp"
            android:paddingTop="15dp"
            android:paddingLeft="20dp"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/change"
            android:layout_gravity="center"
            android:background="@null"/>
    </LinearLayout>
    <View
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_btndieukhoan"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:text="Thông tin người dùng"
            android:textColor="#828282"
            android:textStyle="normal"
            android:textSize="17sp"
            android:paddingTop="15dp"
            android:paddingLeft="20dp"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/change"
            android:layout_gravity="center"
            android:background="@null"/>
    </LinearLayout>
    <View
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_btnptrungtam"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:text="Trung Tâm trợ giúp"
            android:textColor="#828282"
            android:textStyle="normal"
            android:textSize="17sp"
            android:paddingTop="15dp"
            android:paddingLeft="20dp"
            />
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/change"
            android:layout_gravity="center"
            android:background="@null"/>
    </LinearLayout>
    <View
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_btndoimatkhau"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:text="Đổi mật khẩu"
            android:textColor="#828282"
            android:textStyle="normal"
            android:textSize="17sp"
            android:paddingTop="15dp"
            android:paddingLeft="20dp"
            />
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/change"
            android:layout_gravity="center"
            android:background="@null"/>
    </LinearLayout>
    <View
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_btnlogout"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:text="Đăng Xuất"
            android:textColor="#828282"
            android:textStyle="normal"
            android:textSize="17sp"
            android:paddingTop="15dp"
            android:paddingLeft="20dp"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/change"
            android:layout_gravity="center"/>
    </LinearLayout>
    <View
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu"
        app:itemBackground="@color/backgroud_color"
        app:itemIconTint="@color/black"/>

</LinearLayout>