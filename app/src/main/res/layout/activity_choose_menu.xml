<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/second_color"
    tools:context=".view.Choose_MenuActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_info"
        android:orientation="vertical">
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/back"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@null"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hãy chọn thực đơn phù hợp để cải thiện sức khỏe của bản thân"
        android:textSize="25sp"
        android:textStyle="normal"
        android:textColor="#685E5E"
        android:textAlignment="center"
        android:layout_marginTop="30dp"/>
        <EditText
            android:background="@drawable/border_tv"
            android:layout_marginTop="30dp"
            android:id="@+id/tangcan"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:text="Tăng cân"
            android:paddingLeft="100dp"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:drawableStart="@drawable/fire"
            android:drawableLeft="@drawable/fire"
            android:drawablePadding="10dp"
            android:textStyle="bold"
            android:textColor="#666666"

            />
        <EditText
            android:background="@drawable/border_tv"
            android:layout_marginTop="30dp"
            android:id="@+id/giamcan"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:text="Giảm cân"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/giamcan"
            android:drawableStart="@drawable/giamcan"
            android:textColor="#666666"
            android:textStyle="bold"
            android:drawablePadding="10dp"
            android:paddingLeft="100dp"
            android:textSize="25sp"/>
        <EditText
            android:background="@drawable/border_tv"
            android:layout_marginTop="30dp"
            android:id="@+id/healthy"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:drawableStart="@drawable/heal"
            android:drawableLeft="@drawable/heal"
            android:drawablePadding="10dp"
            android:text="Lành mạnh"
            android:layout_gravity="center"
            android:textColor="#666666"
            android:textStyle="bold"
            android:paddingLeft="100dp"
            android:textSize="25sp"/>
        <EditText
            android:background="@drawable/border_tv"
            android:layout_marginTop="30dp"
            android:id="@+id/tangco"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:drawableLeft="@drawable/tangco"
            android:drawableStart="@drawable/tangco"
            android:drawablePadding="10dp"
            android:paddingLeft="100dp"
            android:text="Tăng cơ"
            android:layout_gravity="center"
            android:textColor="#666666"
            android:textStyle="bold"

            android:textSize="25sp"/>
    </LinearLayout>
</LinearLayout>