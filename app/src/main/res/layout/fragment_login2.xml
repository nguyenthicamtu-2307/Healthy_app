<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:orientation="vertical"

        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:background="@drawable/nendn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <LinearLayout
            android:layout_width="410dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:background="@drawable/botron">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Tên Đăng Nhập"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="0dp"
                android:textStyle="bold"
                android:textColor="#000"
                />

            <EditText
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:hint="Vui lòng nhập tên đăng nhập"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Mật khẩu"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="0dp"
                android:textStyle="bold"
                android:textColor="#000"
                />

            <EditText
                android:id="@+id/pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:hint="Vui lòng nhập mật khẩu"
                android:inputType="textPassword"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Ghi nhớ"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                />

            <Button
                android:id="@+id/button_id"
                android:layout_width="312dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_tv"
                android:text="Đăng Nhập"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nếu bạn chưa có tài khoản.Đăng kí tại đây"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:textColor="#000"/>
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="Hoặc đăng nhập với"
                android:textAlignment="center"
                android:layout_marginTop="30dp"
                android:textSize="12sp"
                />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/gmail"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="756dp"
        android:layout_marginLeft="90dp"
        android:background="@drawable/gmail" />
    <ImageView
        android:id="@+id/fb"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="756dp"
        android:background="@drawable/fb" />

    <TextView
        android:id="@+id/dn"
        android:layout_width="159dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="200dp"
        android:text="Đăng Nhập"
        android:textSize="30dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="280dp"
        android:orientation="vertical"
        android:text="Quên mật khẩu?"

        />




</RelativeLayout>
